<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/touch_bg"
                android:padding="10dp">

    <ImageView
        android:id="@+id/book_cover"
        android:layout_width="45dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/book_cover">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="此单在手，书荒不再有！"
            android:textColor="@color/common_h1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="选择"
            android:textColor="@color/common_h2"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/book_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_author"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="应有尽有！注：随时有可能添加新书"
            android:textColor="@color/common_h2"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvBookCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_desc"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_h3"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tvCollectorCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/book_desc"
            android:layout_toRightOf="@id/tvBookCount"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/common_h3"
            android:textSize="13sp"/>

    </RelativeLayout>

</RelativeLayout>